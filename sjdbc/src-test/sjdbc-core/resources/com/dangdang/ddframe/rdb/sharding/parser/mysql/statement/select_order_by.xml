<?xml version="1.0" encoding="UTF-8"?>
<asserts>
    <assert id="assertSelectWithOrderBy" sql="SELECT * FROM order o ORDER BY o.order_id, 2 DESC"
            expected-sql="SELECT * FROM [Token(order)] o ORDER BY o.order_id, 2 DESC">
        <tables>
            <table name="order" alias="o"/>
        </tables>
        <condition-contexts>
            <condition-context/>
        </condition-contexts>
        <order-by-columns>
            <order-by-column owner="o" name="order_id" order-by-type="ASC"/>
            <order-by-column index="2" order-by-type="DESC"/>
        </order-by-columns>
    </assert>

    <assert id="assertSelectWithOrderByForUnion"
            sql="SELECT * FROM order o, order_item i where o.order_id = i.order_id AND o.state = 'RUNNING' ORDER BY o.order_id DESC, 2"
            expected-sql="SELECT * FROM [Token(order)] o, [Token(order_item)] i WHERE o.order_id = i.order_id AND o.state = 'RUNNING' ORDER BY o.order_id DESC, 2">
        <tables>
            <table name="order" alias="o"/>
            <table name="order_item" alias="i"/>
        </tables>
        <condition-contexts>
            <condition-context>
                <condition column-name="state" table-name="order" operator="EQUAL">
                    <value value="RUNNING" type="java.lang.String"/>
                </condition>
            </condition-context>
        </condition-contexts>
        <order-by-columns>
            <order-by-column owner="o" name="order_id" order-by-type="DESC"/>
            <order-by-column index="2" order-by-type="ASC"/>
        </order-by-columns>
    </assert>

    <assert id="assertSelectWithOrderByForAlias"
            sql="SELECT o.order_id as `gen_order_id_` FROM order o ORDER BY o.order_id"
            expected-sql="SELECT [Token(o)].order_id AS `gen_order_id_`[Token(, o.order_id AS sharding_gen_1)] FROM [Token(order)] o ORDER BY o.order_id">
        <tables>
            <table name="order" alias="o"/>
        </tables>
        <condition-contexts>
            <condition-context>
            </condition-context>
        </condition-contexts>
        <order-by-columns>
            <order-by-column owner="o" name="order_id" alias="sharding_gen_1" order-by-type="ASC"/>
        </order-by-columns>
    </assert>
</asserts>
